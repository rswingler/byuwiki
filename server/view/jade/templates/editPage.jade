//- Expected input data:
//-   urlTitle(String): the url for this wiki page
//-   title (String): the title of this wiki page
//-   isArticle(Boolean): whether or not this page is an article (as opposed to a discussion page)
//-   categories(Array(String)): an array of categories this page currently belongs to
!!! 5
html
  head
    link(rel='stylesheet', type='text/css', href='../css/contentPage.css')
    script(type='text/javascript', src='//code.jquery.com/jquery-2.0.3.min.js')
    script(type='text/javascript', src='../js/showdown.js')
    script(type='text/javascript', src='../js/wikiEditorToolbar.js')
    script(type='text/javascript', src='../js/wikiEditorUtilities.js')

  body
    #menu
      img(border='0', src='../img/byu_logo.png', alt='BYU logo', width='90%')
      br
      a(href='http://ec2-54-201-62-212.us-west-2.compute.amazonaws.com')
        | Main Page
        a
          br
          a(href='')
            | Browse Majors
            a
    #topheader
      a.login(href='#') Login
      a.createaccount(href='#') Create Account
      #header
        ul
          li#selected
            a(href='#') Article
          li
            a(href='#') Discussion
      #headerright
        ul
          li#read
            a(href='/wiki/#{urlTitle}') Read
          li#selected2
            a(href='#') Edit
      #search
        form#cse-search-box(action='http/google.com/cse')
          input(type='hidden', name='cx', value='YOUR SEARCH ENGINE ID goes here')
          input(type='hidden', name='ie', value='UTF-8')
          input(type='text', name='q', size='25')
          input(type='submit', name='sa', value='Search')
    #editContent
      h1
        | Edit: #{title}
      //-#editorPanes
      menu#toolbar(type='toolbar')
           button(type='button', onclick='boldText()', value='bold')
            img(src='../img/bold.png')
           button(type='button', onclick='italicText()', value='italics')
            img(src='../img/italic.png')
           button(type='button', onclick='underlineText()', value='underline')
            img(src='../img/underline.png')
           button(type='button', onclick='h2Text()', value='header 2')
            img(src='../img/h2.png')
           button(type='button', onclick='h3Text()', value='header 3')
            img(src='../img/h3.png')
           button(type='button', onclick='bulletList()', value='bullet')
            img(src='../img/list-bullet.png')
           button(type='button', onclick='numericList()', value='numeric')
            img(src='../img/list-numeric.png')
           button(type='button', onclick='addImage()', value='image')
            img(src='../img/image.png')

      textarea#inputPane(onkeydown='renderHTML()', onkeyup='renderHTML()', onkeypress='renderHTML()')
      #previewPane

      #saveBar
          form
           select#categories(name='categories')
           p#addCategory
            button(type='button', onclick='addCategory()') +
            | Add New Category


      #buttons
          a#saveButton.save Save Changes
            a.cancel(href='/wiki/#{urlTitle}') Cancel


