//- Expected input data:
//-   title (String) - The title of this category
//-   pages (Array(Page)) - An array of page objects in this category
//-     | urlTitle (String)- The url of the page
//-     | title (String) - The display title of the page
//-     | preview (String) - A brief few words from the page
!!! 5
html
  head
    script(type='text/javascript', src='/js/newPage.js')
    link(rel='stylesheet', type='text/css', href='/css/contentPage.css')
  body
    #menu
      img(border='0', src='../img/byu_logo.png', alt='BYU logo', width='90%')
      br
      a(href='/')
        | Main Page
        a
          br
          a(href='/list')
            | Browse Pages
            a
          br
          br
          br
          br
          br
          | Create New Page
          form#newPageBox(action='/createNew', method='get')
            input(type='text', name='page', size='14', placeholder='Enter page name')
            input(type='submit', value='Create')
    #topheader
      //a.login(href='#') Login
      //a.createaccount(href='#') Create Account
      #search
        form#searchBox(action='/search', method='get')
          input(type='text', name='query', size='30')
          input(type='submit', value='Search')
    #navigationContent
      h1 Category: #{title}
      each page in pages
          a(href='/wiki/#{page.urlTitle}') #{page.title}
          p #{page.preview}
